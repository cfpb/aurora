#!/bin/sh
#
#chkconfig: - 20 80
# Start up script for SAS studio application
#


# Source function library.
. /etc/init.d/functions

prog="{{ sas_config_home }}/sasstudio.sh"
pidfile="{{ sas_config_home }}/studio/logs/tcserver.pid"

RETVAL=0

start() {
  # see if app server is running
  if [ -f "$pidfile" ] || kill -0 $pidfile 2>/dev/null ; then
    echo "app server is already running"
    return 0
  fi

  echo -n "Starting sas studio: "

  daemon $prog start
  RETVAL=$?

  return $RETVAL
}

stop() {
  # see if app server is running
  if [ -f "$pidfile" ] || kill -0 $pidfile 2>/dev/null ; then
    echo -n "Shutting down sas: "
    killproc -p $pidfile
    RETVAL=$?

    return $RETVAL
  else
    echo "appserver not running"
    return 0
  fi

}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage:  {start|stop|restart}"
        exit 1
        ;;
esac
exit $?
