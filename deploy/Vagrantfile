  # DB Server (opensource centos 7)
  config.vm.define :db_server_centos7 do |server|
    server.vm.box = "centos/7"
    server.vm.host_name = "db-centos7.test.dev"

    server.ssh.forward_agent = true

    server.vm.provider "virtualbox" do |v|
      v.memory = 1024
      v.cpus = 1
    end

    server.ssh.insert_key = false
    server.vm.provision "shell", inline: <<-SHELL
      # bug with vagrant 1.9+ and centos/7
      sudo ifup eth1
    SHELL

    server.vm.provision "ansible" do |ansible|
      ansible_extra_vars = ansible_extra_vars.merge({
        jre_lib_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/jre/lib",
        java_home_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/"
      })
      ansible.playbook = "deploy_db_server.yml"
      ansible.inventory_path = "vagrant_hosts"

      ansible.tags = ansible_tags
      ansible.verbose = ansible_verbosity
      ansible.extra_vars = ansible_extra_vars
      ansible.limit = ansible_limit
    end

    server.vm.network :private_network, ip: "10.0.1.38"
  end

  # Citus Coordinator
  config.vm.define "citus_coordinator" do |cc_config|
    cc_config.vm.box = "centos/7"
    cc_config.vm.host_name = "citus-coordinator.test.dev"
    cc_config.vm.network :private_network, ip: "10.0.1.40"

    cc_config.ssh.forward_agent = true
    cc_config.ssh.insert_key = false
    cc_config.vm.provision "shell", inline: <<-SHELL
      # bug with vagrant 1.9+ and centos/7
      sudo ifup eth1
    SHELL

    cc_config.vm.provision "ansible" do |ansible|
      ansible_extra_vars = ansible_extra_vars.merge({
        jre_lib_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/jre/lib",
        java_home_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/",
        pp_shared_preload_libraries: "citus"
      })
      ansible.playbook = "deploy_citus_server.yml"
      ansible.inventory_path = "vagrant_hosts"
      ansible.tags = ansible_tags
      ansible.verbose = ansible_verbosity
      ansible.extra_vars = ansible_extra_vars
      ansible.limit = ansible_limit
    end
  end

  # Citus Coordinator standby
  config.vm.define "citus_coordinator_standby" do |cc_config|
    cc_config.vm.box = "centos/7"
    cc_config.vm.host_name = "citus-coordinator-standby.test.dev"
    cc_config.vm.network :private_network, ip: "10.0.1.44"

    cc_config.ssh.forward_agent = true
    cc_config.ssh.insert_key = false
    cc_config.vm.provision "shell", inline: <<-SHELL
      # bug with vagrant 1.9+ and centos/7
      sudo ifup eth1
    SHELL

    cc_config.vm.provision "ansible" do |ansible|
      ansible_extra_vars = ansible_extra_vars.merge({
        jre_lib_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/jre/lib",
        java_home_path: "/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.201.b09-2.el7_6.x86_64/",
        pp_shared_preload_libraries: "citus"
      })
      ansible.playbook = "deploy_citus_server.yml"
      ansible.inventory_path = "vagrant_hosts"
      ansible.tags = ansible_tags
      ansible.verbose = ansible_verbosity
      ansible.extra_vars = ansible_extra_vars
      ansible.limit = ansible_limit
    end
  end

