  ################################
  ### DATA WAREHOUSE COMPONENT ###
  ################################

  # DB Server (EDB)
  config.vm.define :db_server_edb do |server|
    server.vm.box = "bento/centos-6.10"
    server.vm.host_name = "db-edb.test.dev"

    server.ssh.forward_agent = true

    server.vm.provider "virtualbox" do |v|
      v.memory = 1024
      v.cpus = 1
    end

    server.vm.provision "ansible" do |ansible|
      if ENV['DB_SERVER_EXTRA_VARS']
        db_server_extra_vars = ENV['DB_SERVER_EXTRA_VARS']
      else
        print "To use the db_server_edb VM, set the DB_SERVER_EXTRA_VARS environment variable to the name of a local YAML file that contains pp_web_username (email addresses only) and pp_web_password as well as 'install_edb' flag set to true.\n"
        print "Example:\n"
        print "$ export DB_SERVER_EXTRA_VARS=local_settings.yml\n"
        print "$ cat local_settings.yml\n"
        print "---\n"
        print "pp_web_username: myusername@example.com\n"
        print "pp_web_password: mypassword\n"
        print "install_edb: True\n"
      end

      ansible.playbook = "deploy_db_server.yml"
      ansible.inventory_path = "vagrant_hosts"

      ansible.tags = ansible_tags
      ansible.verbose = ansible_verbosity
      ansible.extra_vars = ansible_extra_vars
      ansible.limit = ansible_limit
    end

    server.vm.network :private_network, ip: "10.0.1.29"
  end

  # DB Server (opensource centos 6)
